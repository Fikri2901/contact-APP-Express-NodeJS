<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Data Kontak</h2>
            <a href="#" class="btn btn-primary">Tambah kontak</a>

            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">nama</th>
                        <th scope="col">Nomor Telp</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (!contacts.length) { %>
                        <div class="alert alert-danger mt-3" role="alert">
                            Data Kontak tidak ada.
                        </div>
                        <% }else{ %>
                            <% contacts.forEach((con,i) => { i++%>
                                <tr>
                                    <th scope="row">
                                        <%= i++ %>
                                    </th>
                                    <td>
                                        <%= con.nama %>
                                    </td>
                                    <td>
                                        <%= con.nomor %>
                                    </td>
                                    <td>
                                        <a href="/kontak/edit/<%= con.nama %> " class="btn btn-warning badge rounded-pill"><i class="bi bi-pencil-square"></i> Edit</a>
                                        <a href="/kontak/<%= con.nama %> " class="btn btn-info badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
                                        <a href="/kontak/delete/<%= con.nama %> " class="btn btn-danger badge rounded-pill"><i class="bi bi-trash"></i> Delete</a>
                                    </td>
                                </tr>
                                <% }) %>
                                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>