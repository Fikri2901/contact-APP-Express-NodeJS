<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Kontak</h2>
            <% if (!contact) { %>
                <div class="alert alert-danger" role="alert">
                    Data kontak tidak terdaftar <a href="/kontak" class="alert-link">&laquo; Kembali</a>.
                </div>
                <% } else { %>
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= contact.nama %>
                            </h5>
                            <h6 class="card-subtitle mb-2 text-muted">
                                <%= contact.nomor %>
                            </h6>
                            <p class="card-text">
                                <%= contact.email %>
                            </p>
                            <a href="/kontak" class="card-link">&laquo; Kembali</a>
                        </div>
                    </div>
                    <% } %>
        </div>
    </div>
</div>