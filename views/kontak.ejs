<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Data Kontak</h2>

            <% if (typeof errors != 'undefined') { %>
                <div class="alert alert-danger" role="alert">
                    <h3>Tambah kontak Gagal !!</h3>
                    <ul>
                        <% errors.forEach(error => { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                </div>
                <% } %>

                    <% if (msg.length !== 0) { %>
                        <div class="alert alert-success" role="alert">
                            <%= msg %>
                        </div>
                        <% } %>

                            <a href="#" data-bs-toggle="modal" data-bs-target="#modalAdd" class="btn btn-primary">Tambah kontak</a>
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">nama</th>
                                        <th scope="col">Nomor Telp</th>
                                        <th scope="col">Aksi</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (!contacts.length) { %>
                                        <tr>
                                            <td colspan="4">
                                                <div class="alert alert-danger mt-3" role="alert">
                                                    Data Kontak tidak ada.
                                                </div>
                                            </td>
                                        </tr>
                                        <% }else{ %>
                                            <% contacts.forEach((con,i) => { i++%>
                                                <tr>
                                                    <th scope="row">
                                                        <%= i++ %>
                                                    </th>
                                                    <td>
                                                        <%= con.nama %>
                                                    </td>
                                                    <td>
                                                        <%= con.nomor %>
                                                    </td>
                                                    <td>
                                                        <a href="/kontak/edit/<%= con.nama %> " class="btn btn-warning badge rounded-pill"><i class="bi bi-pencil-square"></i> Edit</a>
                                                        <a href="/kontak/<%= con.nama %> " class="btn btn-info badge rounded-pill"><i class="bi bi-info-circle"></i> Detail</a>
                                                        <a href="/kontak/delete/<%= con.nama %> " class="btn btn-danger badge rounded-pill"><i class="bi bi-trash"></i> Delete</a>
                                                    </td>
                                                </tr>
                                                <% }) %>
                                                    <% } %>
                                </tbody>
                            </table>
        </div>
    </div>

    <div class="modal fade" id="modalAdd" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Tambah Data Kontak</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form action="/kontak" method="post">
                    <div class="modal-body">
                        <div class="mb-3">
                            <label for="nama" class="form-label">Nama</label>
                            <input type="text" class="form-control" id="nama" name="nama" placeholder="Masukkan nama">
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email" class="form-control" id="email" name="email" placeholder="Masukkan email">
                        </div>
                        <div class="mb-3">
                            <label for="nomor" class="form-label">Nomor Telp</label>
                            <input type="text" class="form-control" id="nomor" name="nomor" placeholder="Masukkan Nomor Telp">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Tutup</button>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>